<h2 class="mb-2 text-lg font-semibold text-gray-900 light:text-black">Questions list:</h2>

<% @questions.each do |question| %>
  <%= link_to question_path(question), class: "block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 light:bg-gray-800 light:border-gray-700 light:hover:bg-gray-700 mb-5" do %>
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900"><%= question.title %></h5>
      <p class="font-normal text-gray-700 text-gray-400"><%= question.body[0...20] %></p>
  <% end %>
<% end %>

<%= link_to 'Create Question', new_question_path, class: "text-white bg-purple-700 hover:bg-purple-800 focus:outline-none focus:ring-4 focus:ring-purple-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mb-2 light:bg-purple-600 light:hover:bg-purple-700 light:focus:ring-purple-900" %>
